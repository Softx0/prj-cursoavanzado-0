<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_main"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="vertical"
        android:paddingTop="5dp"
        tools:context=".ChoosePost">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mProductImage"
                android:layout_width="120dp"
                android:layout_margin="20dp"
                android:background="@drawable/loading"
                android:layout_height="120dp" />

            <Button
                android:id="@+id/mBtnChoose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:layout_marginLeft="40dp"
                android:text="Choose a Product" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_marginTop="40dp"
                android:id="@+id/mTitleProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter title for Product..." />

            <EditText
                android:id="@+id/mPriceProduct"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter price for Product..." />

            <LinearLayout
                android:id="@+id/linearLayoutthird"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Adress..." />

                <Button
                    android:id="@+id/mBtnAdress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:text="Generate Adress" />

            </LinearLayout>

            <Button
                android:id="@+id/mBtnUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:layout_marginTop="60dp"
                android:layout_gravity="center"
                android:text="Upload" />

            <TextView
                android:id="@+id/mViewAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:text="View Uploads"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>